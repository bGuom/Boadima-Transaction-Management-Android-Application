<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creativewebs.boardima.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow">


        <ImageView
            android:id="@+id/IB3"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/IB1"
            android:layout_alignStart="@+id/IB1"
            android:layout_below="@+id/IB1"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ico3" />

        <ImageView
            android:id="@+id/IB1"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/topbackground"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="45dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ico1" />

        <ImageView
            android:id="@+id/IB2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_above="@+id/IB3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ico2" />

        <ImageView
            android:id="@+id/IB4"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/IB2"
            android:layout_alignStart="@+id/IB2"
            android:layout_alignTop="@+id/IB3"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ico4" />

        <ImageView
            android:id="@+id/topbackground"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@color/colorPrimary" />

        <ImageView
            android:id="@+id/toplogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            app:srcCompat="@drawable/boardima" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
